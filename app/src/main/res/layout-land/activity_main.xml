            android:text="6"
            android:id="@+id/b6"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:onClick="onClickNumber"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/min"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="tan"
            android:id="@+id/tan"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="e"
            android:id="@+id/e"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/b1"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickNumber"
            android:fontFamily="sans-serif-light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/b2"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:layout_marginRight="1dp"
            android:onClick="onClickNumber"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/b3"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:layout_marginRight="1dp"
            android:onClick="onClickNumber"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/plus"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="^"
            android:id="@+id/step"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="%"
            android:id="@+id/perc"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/b0"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:layout_marginRight="1dp"
            android:onClick="onClickNumber"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:id="@+id/dot"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:fontFamily="sans-serif-light"
            android:focusableInTouchMode="false"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="โ"
            android:id="@+id/back"
            android:layout_weight="1"
            android:background="#e0e0e0"
            android:textSize="25dp"
            android:layout_marginRight="1dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp"
            android:onClick="onClickBackspace" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/eq"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:onClick="onClickEqual"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="log"
            android:id="@+id/log"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="ln"
            android:id="@+id/ln"
            android:layout_weight="1"
            android:background="#ff8e02"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginBottom="1dp"
            android:onClick="onClickOperator"
